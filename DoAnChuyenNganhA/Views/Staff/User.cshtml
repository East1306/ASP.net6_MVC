@model IEnumerable<DoAnChuyenNganhA.Models.NhanVien>

@{
    var input_name = "";
}
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Our staff</h3>

            <div class="card-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input id="searchName" type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                        <button id="filterButton" value="@input_name" class="btn btn-default" href="~?name=@input_name">
                       
                            <i class="fas fa-search">
                             

                            </i>
                            
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Citizen Identity Card</th>
  
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s  in Model)
                    {
                        <tr>
                            <td>@s.MaNv</td>
                            <td>@s.TenNv</td>
                            <td>11-7-2014</td>
                            <td><span class="tag tag-success">@s.Chucvu</span></td>
                            <td>@s.Cancuoc</td>
                            <td>
                                <button type="button" onclick="confirmForm()">Delete</button>
                            </td>
                            <td>
                                <button type="button">Update</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<script>
    function confirmForm() {
        let text = "Do you want to delete this staff?";
        if (confirm(text) == true) {
            alert('Deleted');
        }
    }
    function InputName { get; set; }
 
</script>

@section Scripts {
    <script>
        document.getElementById("filterButton").addEventListener("click", function () {
            var name = @input_name; 
            // Construct the new URL with the name parameter
            var url = "?name=" + encodeURIComponent(name);
            // Redirect to the new URL
            window.location.href = url;
        });
    </script>
}