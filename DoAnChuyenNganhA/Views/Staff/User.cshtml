@model IEnumerable<DoAnChuyenNganhA.Models.NhanVien>

@{
    var input_name = "";
}
@section Scripts {
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Khi tài liệu đã được tải
            $('#submitButton').click(function () {
                // Khi nút có id 'btnGetValue' được click
                var input_name = $('#searchName').val(); // Lấy giá trị từ thẻ input có id 'inputValue'
                var url = "/Staff/User?name=" + input_name;
                // Chuyển hướng đến URL đã tạo
                window.location.href = url;
            });
        });
    </script>
}
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Our staff</h3>

            <div class="card-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input id="searchName" type="text" name="table_search" class="form-control float-right" placeholder="Search"/>
                    <div class="input-group-append">
                        <button id="submitButton" class="btn btn-default">
                            <i class="fas fa-search">
                            </i> 
                        </button>
                       
                       
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Citizen Identity Card</th>
  
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s  in Model)
                    {
                        <tr>
                            <td>@s.MaNv</td>
                            <td>@s.TenNv</td>
                            <td>11-7-2014</td>
                            <td><span class="tag tag-success">@s.Chucvu</span></td>
                            <td>@s.Cancuoc</td>
                            <td>
                                <button type="button" onclick="confirmForm()">Delete</button>
                            </td>
                            <td>
                                <button type="button">Update</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<script>
    function confirmForm() {
        let text = "Do you want to delete this staff?";
        if (confirm(text) == true) {
            alert('Deleted');
        }
    }


 
</script>

